@model CadastroDeCliente.Models.PessoaFisica

@{
    ViewData["Title"] = "Create";
}

<h1>Novo usuário</h1>

<h4>Preencha os campos abaixo para incluir um novo usuário</h4>
<hr />

<div>
    <a class="btn btn-primary" asp-action="Index">Voltar</a>
</div>
<br />
<div class="row">
    <div class="col-md">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card">
                <div class="card-header">Informações Pessoais</div>
                <div class="card-body row">
                    <div class="col-md">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md">
                        <div class="form-group">
                            <label asp-for="Cpf" class="control-label"></label>
                            <input asp-for="Cpf" class="form-control" id="txtCpf" />
                            <span asp-validation-for="Cpf" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md">
                        <div class="form-group">
                            <label asp-for="Rg" class="control-label"></label>
                            <input asp-for="Rg" class="form-control" id="txtRg" />
                            <span asp-validation-for="Rg" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md">
                        <div class="form-group">
                            <label asp-for="DtNascimento" class="control-label"></label>
                            <input asp-for="DtNascimento" class="form-control" />
                            <span asp-validation-for="DtNascimento" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="card">
                <div class="card-header">Endereço</div>
                <div class="card-body row">

                    <div class="col-md">
                        <div class="form-group">
                            <label asp-for="Rua" class="control-label"></label>
                            <input asp-for="Rua" class="form-control" />
                            <span asp-validation-for="Rua" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NumeroCasa" class="control-label"></label>
                            <input asp-for="NumeroCasa" class="form-control" />
                            <span asp-validation-for="NumeroCasa" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md">
                        <div class="form-group">
                            <label asp-for="Bairro" class="control-label"></label>
                            <input asp-for="Bairro" class="form-control" />
                            <span asp-validation-for="Bairro" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Cidade" class="control-label"></label>
                            <input asp-for="Cidade" class="form-control" />
                            <span asp-validation-for="Cidade" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>
            <br />
            <div class="card">
                <div class="card-header">Contato</div>
                <div class="card-body row">
                    <div class="form-group">
                        <label asp-for="Telefone" class="control-label"></label>
                        <input asp-for="Telefone" class="form-control" id="txtTel" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>




@section Scripts {
    <script>
        $('#txtCpf').keypress(function () {
            if (this.value.length >= 11)
                return false;
        });

        $('#txtRg').keypress(function () {
            if (this.value.length >= 9)
                return false;
        });

        $('#txtTel').keypress(function () {
            if (this.value.length >= 11)
                return false;
        });



        







    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
